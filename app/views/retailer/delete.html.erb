<% if !flash[:notice].blank? %>
    <div class="notice">
        <%= flash[:notice] %>
    </div>
<% end %>
<h3>Delete Retailer</h3>

<%= link_to("<< Back to List", {:action => 'index'}, :class => 'back-link') %>

<div class="Retailers delete">
  	<h2>Delete Retailer</h2>

  	<%= form_for(:Retailer, :url => {:action => 'destroy', :id => @retailer.id}) do |f| %>

