<!DOCTYPE html>
<html>
<head>
  <title>Ceekay Tracker</title>
  <%= stylesheet_link_tag('application', :media => 'all') %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div id="header">
		<h2>Welcome to Ceekay Tracker</h2>
	</div>

	<div id="content">
		<div id="content">
	      	
			<%= link_to("Logout", {:controller => 'user', :action => 'logout'}, :class => 'danger') %>
			<%= link_to("Upload", {:controller => 'upload', :action => 'index'}, :class => 'danger') %>
			<%= link_to("See Retailers on Map", {:controller => 'retailer', :action => 'map'}, :class => 'normal') %>
			
		</div>
		<%= yield %>

	</div>
	
	<div id="footer">
		<h4> &copy; &nbsp; Ceekay Tracker </h4>
	</div>

</body>
</html>
